page{
  background: #fff;
  height: 100%; 
  overflow: hidden;
  border-top: 1rpx solid #E0E0E0;
}
.content {
  color: #fc9797;
  width: 100%;
  height: 60rpx;
  display: flex;
  padding-left:10rpx ;
  align-items: center;
  background-color: #d4edd8;
  font-size: 3px;
}
.chose-area{
  display: flex;
  background-color: #fff;
  width: 100%;
  padding-left: 30rpx;
  height:auto;
  text-align: center;
}
.choose-area .title text{
  display: flex;
  color: #9d9d9d;
  align-items: center;
  padding-left: 30rpx;
  padding-top: 25rpx;
}
.choose-area .add-form{
  background: #fff;
  width: 100%;
  height: auto;
  overflow: hidden;
}
.choose-area .form-item{
  height: 80rpx;
  color: #9d9d9d;
  border-bottom: 1px solid #ebe9e9;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 31.25rpx;
}
.choose-address .input{
  flex: 1;
  height: 44rpx;
  line-height: 44rpx;
  overflow: hidden;
}
.content2{
  width: 100%;
  height: 60rpx;
  display: flex;
  padding-left:30rpx ;
  align-items: center;
  background-color: #E0E0E0;
  font-weight: bold;
}
.content2 text{
  color: #9d9d9d;
}

.theme{
  width: 100%;
  height: 120rpx;
  display: flex;
  padding-left:30rpx ;
  padding-top: 25rpx;
  font-weight: bold;
  background-color: #fff;
  border-bottom: 1rpx solid #E0E0E0;
}
.theme .theme_title{
  display: flex;
  font-size: 15px;
}
.theme .theme-input{
  height: 90rpx;
  font-weight: lighter;
  display: flex;
}

.text{
  width: 100%;
  height: 400rpx;
  display: flex;
  padding-left:30rpx ;
  padding-top: 25rpx;
  background-color: #fff;
  font-weight: bold;
  border-bottom: 1rpx solid #E0E0E0;
}
.text .text_title{
  display: flex;
  font-size: 15px;
}
.text .text-input{
  height: 450rpx;
  font-weight: lighter;
}

.content3{
  width: 100%;
  height: 60rpx;
  display: flex;
  padding-left:30rpx ;
  align-items: center;
  background-color: #E0E0E0;
  font-weight: bold;
}
.content3 text{
  color: #9d9d9d;
}
.addimg{
  width: 100%;
  height: 200rpx;
  display: flex;
  padding-left:30rpx ;
  padding-top: 25rpx;
  background-color: #fff;
  font-weight: bold;
  border-bottom: 1rpx solid #E0E0E0;
}
.addimg image{
  width: 100rpx;
  height: 100rpx;
}
.publish{
  width: 100%;
  height: auto;
  display: flex;
  padding-left:30rpx ;
  padding-right: 30rpx;
  padding-top: 25rpx;
  align-items: center;
  background-color: #E0E0E0;
}
.Button_publish {
  width: 60rpx;
  background: #11BE84; 
  color: #fff;
  display: flex;
  margin-bottom: 300rpx;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
.Button_Anonpublish {
  width: 60rpx;
  background: #11BE84; 
  color: #fff;
  display: flex;
  margin-bottom: 300rpx;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
.picker{
  font-size: 18px;
}